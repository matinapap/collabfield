<div id="branch-main-content" class="container">
  <div class="row">
    <h1 class="page-title"><%= page_title %></h1>
    <%= render 'posts/branch/create_new_post', branch: branch %>
  </div><!-- row -->

  <div class="row">
  <div class="col-sm-12" id="feed">
    <% if @posts.present? %>  <!-- Check if @posts is not nil and not empty -->
      <%= render @posts %>   <!-- Render posts -->
    <% else %>  
      <%= render no_posts_partial_path %>  <!-- Render no posts message -->
    <% end %>
  </div>
</div><!-- row -->


  <div class="infinite-scroll">
    <%= will_paginate @posts %>
  </div>
</div><!-- container -->
